@model BirthdayApp.Models.Davetiye

@{
    ViewBag.Title = "DavetiyeFormu";
}

<h2>Davetiye Formu</h2>

<div class="panel panel-success">
    <div class="panel-heading"><h4>Davetlisiniz!</h4></div>
    <div class="panel-body">
        @using (Html.BeginForm())
         {
            <div class="form-group">
                <label>Ad:</label>
                @Html.TextAreaFor(x => x.Ad, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Eposta:</label>
                @Html.TextAreaFor(x => x.Eposta, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Katılacak Mısın?</label><br />
                @Html.DropDownListFor(x => x.KatilmaDurumu, new[] 
                {
                    new SelectListItem() {Text="Evet geliyorum!", Value=bool.TrueString},
                    new SelectListItem() {Text="Üzgünüm maalesef gelemeyeceğim!", Value=bool.FalseString}
                }, "Geliyor musun?", new { @class="form-control"})
            </div>
            <div class="text">
                <input class="btn btn-success" type="submit" value="Gönder"/>
            </div>
         }
    </div>
</div>